#include <stdio.h>
#include <stdlib.h>

void main()
{
    int i, cost , surcharge,total;
    char name[25];
    float units;

    printf("Enter customer name : ");
    scanf("%s",&name);
    printf("Enter customer id :");
    scanf("%d",&id);
    printf("Enter the number of units consumed");
    scanf("%d",&units);

    if (units < 100)
    cost = 100 + (units*5) ;
    else if (( units <301) && (units >=101))
        cost = 600 + (units-100)*7;
    else
        cost = 100 + (units - 300)*10 + 500 + 1400;

        if (cost > 1000)
        surcharge = 0.05*cost ;
        total = surcharge + cost;

        printf("UNITS = %f \n",units);
        printf("COST = %d \n" , cost);
        printf("SURCHARGE = %d " , surcharge);
        printf("TOTAL = %d ", total);

}

